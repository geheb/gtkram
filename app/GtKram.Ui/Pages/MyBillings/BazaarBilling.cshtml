@page "/MyBillings/Bazaar/{eventId:guid}"
@model GtKram.Ui.Pages.MyBillings.BazaarBillingModel
@{
    ViewData["Title"] = Model.GetNode().Title;
    ViewData["HasFooter"] = true;

    Guid.TryParse(Request.RouteValues["eventId"] as string, out var eventId);

    var statusConverter = new BillingStatusConverter();
    var dateConverter = new GermanDateTimeConverter();
    var createUrl = Url.PageLink(string.Empty, "create", new { eventId });
}

@await Html.PartialAsync("_Header")

<section class="small-section">
    <div class="container">

        <div class="columns is-gapless is-mobile">
            <div class="column is-flex is-align-items-center">@Html.CreateBreadcrumb(new { eventId })</div>
            <div class="column is-narrow">
                <div class="dropdown is-hoverable is-right">
                    <div class="dropdown-trigger">
                        <button class="button" aria-haspopup="true" aria-controls="user-action">
                            <span class="icon is-small">
                                <i class="fas fa-ellipsis-vertical"></i>
                            </span>
                        </button>
                    </div>
                    <div class="dropdown-menu" id="user-action" role="menu">
                    @if (ModelState.IsValid)
                    {
                        <div class="dropdown-content">
                            <a class="dropdown-item" href="@createUrl">
                                Kassenvorgang starten
                            </a>
                        </div>
                    }
                    </div>
                </div>
            </div>
        </div>

        <h2 class="title is-4">@Model.Event</h2>

        @if (ModelState.IsValid)
        {
            <div>
                <a href="@createUrl" class="button is-floating is-link">
                    <i class="fas fa-cart-plus"></i>
                </a>
            </div>
        }

        @if (!ModelState.IsValid)
        {
            <div class="notification is-danger">
                <button class="delete"></button>
                <div asp-validation-summary="All"></div>
            </div>
        }

        <div class="list">
            @if (Model.Items.Length == 0)
            {
                <div>Keine Kassenvorgänge gefunden.</div>
            }
            @foreach (var i in Model.Items)
            {
                <div class="list-item list-item-clickable" data-url="@Url.PageLink("Articles", null, new { eventId, id = @i.Billing.Id })">
                    <div class="list-item-image">
                        <i class="fas fa-cart-shopping fa-2x has-text-info"></i>
                    </div>
                    <div class="list-item-content">
                        <div class="list-item-title">@dateConverter.ToDateTime(i.Billing.CreatedOn)</div>
                        <div class="list-item-description">
                            <span class="tag is-rounded @(i.Billing.IsCompleted ? "is-success" : "is-warning")">@statusConverter.StatusToString(i.Billing.Status)</span>
                            <span class="tag is-rounded">@i.ArticleCount Artikel</span>
                            <span class="tag is-rounded">@i.Total.ToString("0.00") €</span>
                        </div>
                    </div>
                    <div class="list-item-controls">
                        <div class="buttons is-right is-hidden-mobile">
                            <a class="button" href="@(Url.PageLink("Articles", null, new { eventId, id = @i.Billing.Id }))">
                                <span class="icon is-small"><i class="fa-solid fa-magnifying-glass"></i></span>
                                <span>Kassenartikel</span>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</section>

@await Html.PartialAsync("_Footer")

@section Scripts {
    <script type="text/javascript">
    $(function () {
        $(".clickable-row").click(function (e) {
            e.stopPropagation();
            window.location = $(this).data("url");
        });
    });
    </script>
}
