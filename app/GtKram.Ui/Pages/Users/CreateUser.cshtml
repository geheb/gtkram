@page "/Users/Add"
@model GtKram.Ui.Pages.Users.CreateUserModel
@{
    ViewData["Title"] = Model.GetNode().Title;
    ViewData["HasFooter"] = true;

    var converter = new Converter.RoleConverter();
}

@await Html.PartialAsync("_Header")

<section class="small-section">
    <div class="container">

        <div class="is-flex mb-2 is-height-2-5 is-align-items-center">
            @Html.CreateBreadcrumb()
        </div>

        <div class="columns">
            <div class="column is-half">

                @if (!ModelState.IsValid)
                {
                    <div class="notification is-danger">
                        <button class="delete"></button>
                        <div asp-validation-summary="All"></div>
                    </div>
                }

            <form method="post">
                <div class="field">
                    <label class="label" asp-for="Input.Name"></label>
                    <div class="control">
                        <input class="input" type="text" asp-for="Input.Name" autofocus="" />
                    </div>
                    <span asp-validation-for="Input.Name"></span>
                </div>
                <div class="field">
                    <label class="label" asp-for="Input.Email"></label>
                    <div class="control">
                        <input class="input" type="email" asp-for="Input.Email" />
                    </div>
                    <span asp-validation-for="Input.Email"></span>
                </div>
                <div class="field">
                    <label class="label">Rollen</label>
                </div>
                <div class="field">
                    <input id="checkbox0" type="checkbox" asp-for="Input.Roles[0]" />
                    <label for="checkbox0">@converter.RoleToString(Domain.Models.UserRoleType.Administrator)</label>

                    <input id="checkbox1" type="checkbox" asp-for="Input.Roles[1]" />
                    <label for="checkbox1">@converter.RoleToString(Domain.Models.UserRoleType.Manager)</label>

                    <input id="checkbox2" type="checkbox" asp-for="Input.Roles[2]" />
                    <label for="checkbox2">@converter.RoleToString(Domain.Models.UserRoleType.Seller)</label>

                    <input id="checkbox3" type="checkbox" asp-for="Input.Roles[3]" />
                    <label for="checkbox3">@converter.RoleToString(Domain.Models.UserRoleType.Billing)</label>
                </div>

                <button class="button is-primary" type="submit">Anlegen</button>
            </form>

            </div>

        </div>
    </div>

</section>

@await Html.PartialAsync("_Footer")
