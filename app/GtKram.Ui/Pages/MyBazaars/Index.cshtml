@page
@model GtKram.Ui.Pages.MyBazaars.IndexModel
@{
    ViewData["Title"] = Model.GetNode().Title;
    ViewData["HasFooter"] = true;

    var eventConverter = new EventConverter();
}

@await Html.PartialAsync("_Header")

<section class="small-section">
    <div class="container">

        @Html.CreateBreadcrumb()

        <div class="list">
            @if (Model.Items.Length == 0)
            {
                <div>Keine Kinderbasare gefunden.</div>
            }
            @foreach (var i in Model.Items)
            {
                <div class="list-item list-item-clickable" data-url="@Url.PageLink("Articles", null, new { sellerId = i.Seller.Id })">
                    <div class="list-item-image">
                        <i class="fas fa-store fa-2x has-text-info"></i>
                    </div>
                    <div class="list-item-content">
                        <div class="list-item-title">@eventConverter.Format(i.Event)</div>
                        <div class="list-item-description">
                            <span class="tag is-rounded">Verkäufernummer @i.Seller.SellerNumber</span>
                            <span class="tag is-rounded)">@i.ArticleCount / @i.Seller.MaxArticleCount Artikel</span>
                        </div>
                    </div>
                    <div class="list-item-controls">
                        <div class="buttons is-right is-hidden-mobile">
                            <a class="button" href="@(Url.PageLink("Articles", null, new { sellerId = i.Seller.Id }))">
                                <span class="icon is-small"><i class="fa-solid fa-magnifying-glass"></i></span>
                                <span>Artikel</span>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</section>

@await Html.PartialAsync("_Footer")
