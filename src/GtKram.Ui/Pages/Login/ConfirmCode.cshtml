@page
@model GtKram.Ui.Pages.Login.ConfirmCodeModel
@{
    ViewData["Title"] = "Login mit Code bestätigen";
}

<div class="login-wrapper columns is-gapless">

    <div class="column is-6 is-hidden-mobile">
        <div class="hero is-fullheight login-bg">
        </div>
    </div>

    <div class="column is-6">
        <div class="hero is-fullheight">
            <div class="hero-heading pt-6 px-6">

                <h1 class="title has-text-centered">
                    @appSettings.Value.HeaderTitle
                </h1>

                <h2 class="subtitle has-text-centered">
                    Um fortzufahren, wird ein 6-stelliger Bestätigungscode der Zwei-Faktor-Authentifizierung (2FA) benötigt.
                </h2>

                @if (!ModelState.IsValid)
                {
                    <div class="notification is-danger">
                        <button class="delete"></button>
                        <div asp-validation-summary="All"></div>
                    </div>
                }

            </div>
            <div class="hero-body">

                <div class="column is-three-fifths-fullhd is-offset-one-fifth-fullhd">

                    <div class="box my-3">

                        <figure class="avatar-big has-text-centered mb-5">
                            <span class="fa-stack fa-4x">
                              <i class="fa-solid fa-circle fa-stack-2x"></i>
                              <i class="fa-solid fa-user-astronaut fa-stack-1x fa-inverse"></i>
                            </span>
                        </figure>

                        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                            <fieldset disabled="@Model.IsDisabled">
                                <input class="input is-hidden" type="text" asp-for="UserName" />
                                <div class="field">
                                    <div class="control">
                                        <input class="input is-large" type="text" autofocus="" asp-for="Code" />
                                    </div>
                                    <span asp-validation-for="Code"></span>
                                </div>
                                <div class="field">
                                    <div class="control">
                                        <input type="checkbox" asp-for="IsTrustBrowser" />
                                        <label asp-for="IsTrustBrowser"></label>
                                    </div>
                                </div>
                                <button class="button is-block is-info is-large is-fullwidth" type="submit">Login <i class="fas fa-sign-in-alt" aria-hidden="true"></i></button>
                            </fieldset>
                        </form>

                    </div>

                    <p class="has-text-grey has-text-centered">
                        GT Kram &nbsp;·&nbsp;
                        <a href="/Login">Login</a> &nbsp;·&nbsp;
                        <a href="/Privacy">Datenschutz</a> &nbsp;·&nbsp;
                        <a href="/">Startseite</a>
                    </p>
                </div>

            </div>
        </div>
    </div>
</div>