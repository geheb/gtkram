@page
@model GtKram.Ui.Pages.Login.ConfirmResetPasswordModel
@{
    ViewData["Title"] = "Passwort ändern";
}

<div class="login-wrapper columns is-gapless">

    <div class="column is-6 is-hidden-mobile">
        <div class="hero is-fullheight login-bg">
        </div>
    </div>

    <div class="column is-6">
        <div class="hero is-fullheight">
            <div class="hero-heading pt-6 px-6">

                <h1 class="title has-text-centered">
                    @appSettings.Value.HeaderTitle
                </h1>

                <h2 class="subtitle has-text-centered">
                    Hiermit kannst du dein neues Passwort für dein Konto "@Model.ChangePasswordEmail" setzen. 
                    Dein neues Passwort muss aus mindestens 10 Zeichen, Kleinbuchstaben, Großbuchstaben, Zahlen und Sonderzeichen bestehen.
                </h2>

                @if (!ModelState.IsValid)
                {
                    <div class="notification is-danger">
                        <button class="delete"></button>
                        <div asp-validation-summary="All"></div>
                    </div>
                }

            </div>

            <div class="hero-body">

                <div class="column is-three-fifths-fullhd is-offset-one-fifth-fullhd">

                    <div class="box my-3">

                        <figure class="avatar-big has-text-centered mb-5">
                            <span class="fa-stack fa-4x">
                              <i class="fa-solid fa-circle fa-stack-2x"></i>
                              <i class="fa-solid @Html.RandomFontawesomeFace() fa-stack-1x fa-inverse"></i>
                            </span>
                        </figure>

                        <form method="post">
                            <fieldset disabled="@Model.IsDisabled">
                                <input class="input is-hidden" type="text" asp-for="UserName" />
                                <div class="field">
                                    <div class="control has-icons-right">
                                        <input class="input is-large" type="password" placeholder="Dein neues Passwort" asp-for="Password" />
                                        <span class="icon is-right is-toggle-password">
                                            <i class="fas fa-eye"></i>
                                        </span>
                                    </div>
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="field">
                                    <div class="control has-icons-right">
                                        <input class="input is-large" type="password" placeholder="Dein neues Passwort wiederholen" asp-for="RepeatPassword" />
                                        <span class="icon is-right is-toggle-password">
                                            <i class="fas fa-eye"></i>
                                        </span>
                                    </div>
                                    <span asp-validation-for="RepeatPassword"></span>
                                </div>
                                <button class="button is-block is-info is-large is-fullwidth" type="submit">Speichern <i class="fas fa-lock" aria-hidden="true"></i></button>
                            </fieldset>
                        </form>

                    </div>

                    <p class="has-text-grey has-text-centered">
                        GT Kram &nbsp;·&nbsp;
                        <a href="/Login/PasswordForgotten">Passwort vergessen?</a> &nbsp;·&nbsp;
                        <a href="/Privacy">Datenschutz</a> &nbsp;·&nbsp;
                        <a href="/">Startseite</a>
                    </p>
                </div>

            </div>
        </div>
    </div>

</div>